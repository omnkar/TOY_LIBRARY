<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h1>showing all toys</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1"></div>
        <% for(let toy of toys) { %>
            <a href="/toys/<%= toy.toyid %>" class="toys-links">
                <div class="card col">
                    <img src="<%= toy.toyimage %>" class="card-img-top" alt="toys-image"  style="height: 20rem;" >

                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b>Toy Name:<%= toy.toyname %></b><br> 
                        <b>Toy Category:<%= toy.toycategory %></b><br>
                        <b>Toy Price:<%= toy.toyprice %></b>
                    </p>
                    </div>
                  </div>
            </a>
              <% } %>
    </div>
</body>
</html>